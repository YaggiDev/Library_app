    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa kategorii</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kategoria in kategorie %}
            <tr>
                <td>{{ kategoria.id }}</td>
                <td>{{ kategoria.nazwa }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('kategoria_show', {'id': kategoria.id}) }}">Poka≈º</a>
